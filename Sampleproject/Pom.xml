<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>services</artifactId>
        <groupId>com.hsbc.cmb.gbb.gb.onboarding</groupId>
        <version>1.2.3</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>hsbc-make-payments</artifactId>
    <packaging>jar</packaging>
    <name>Backbase CXP Make Payments</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- CXP Portal Services Authentication Dependency -->
        <dependency>
            <groupId>com.backbase.portal.commons</groupId>
            <artifactId>configuration</artifactId>
            <version>${cxp.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Encryption property -->
        <dependency>
            <groupId>org.jasypt</groupId>
            <artifactId>jasypt</artifactId>
            <version>1.8</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-core</artifactId>
            <version>2.16.5</version>
        </dependency>

        <dependency>
            <groupId>com.hsbc.cmb.gbb.gb.onboarding</groupId>
            <artifactId>hsbc-mule-integration</artifactId>
        </dependency>

        <dependency>
            <groupId>com.hsbc.cmb.gbb.gb.onboarding</groupId>
            <artifactId>hsbc-commons</artifactId>
        </dependency>

        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>2.8.0</version>
        </dependency>

        <dependency>
            <groupId>com.hsbc.cmb.gbb.gb.onboarding</groupId>
            <artifactId>hsbc-test-dependencies</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Jackson -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>

        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
            <version>1.8</version>
        </dependency>

        <dependency>
            <groupId>com.hsbc.cmb.gbb.gb.onboarding</groupId>
            <artifactId>hsbc-configuration</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.hsbc.cmb.gbb.gb.onboarding</groupId>
            <artifactId>hsbc-transaction-signing</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-http4</artifactId>
        </dependency>

        <dependency>
            <groupId>com.hsbc.cmb.gbb.gb.onboarding</groupId>
            <artifactId>hsbc-payments-commons</artifactId>
            <version>1.2.3</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                    <environmentVariables>
                        <KEY_ALGORITHM>PBEWithSHA1AndRC4_128</KEY_ALGORITHM>
                        <ENCRYPTION_KEY>SH3FFIELD</ENCRYPTION_KEY>
                    </environmentVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
